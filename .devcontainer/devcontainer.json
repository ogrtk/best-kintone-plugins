{
	"name": "Debian",
	"dockerFile": "Dockerfile",
	"runArgs": [
		"--env-file",
		".devcontainer/.env"
	],
	"postCreateCommand": "chmod +x ./.devcontainer/install-globals.sh && ./.devcontainer/install-globals.sh",
	"workspaceFolder": "${localWorkspaceFolder}",
	"customizations": {
		"vscode": {
			"extensions": [
				"Gruntfuggly.todo-tree",
				"MS-CEINTL.vscode-language-pack-ja",
				"ChakrounAnas.turbo-console-log",
				"styled-components.vscode-styled-components",
				"biomejs.biome",
				"steoates.autoimport",
				"natqe.reload",
				"Anthropic.claude-code"
			]
		}
	}
}